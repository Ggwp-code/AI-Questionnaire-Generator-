# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here

# ========== STEP 2: BLOOM-ADAPTIVE RAG CONFIGURATION ==========

# Enable/disable Bloom-adaptive RAG (default: true)
# When enabled, retrieval k dynamically adjusts based on Bloom's taxonomy level
BLOOM_RAG_ENABLED=true

# Retrieval k values for different Bloom levels
# Bloom 1-2 (Remember/Understand): Use fewer chunks
BLOOM_K_LOW=4

# Bloom 3-4 (Apply/Analyze): Use moderate chunks
BLOOM_K_MED=8

# Bloom 5-6 (Evaluate/Create): Use more chunks for comprehensive context
BLOOM_K_HIGH=13

# ========== STEP 3: PEDAGOGY TAGGER CONFIGURATION ==========

# Enable/disable automatic pedagogy tagging (default: false)
# When enabled, questions are tagged with Course Outcomes (CO) and Program Outcomes (PO)
ENABLE_PEDAGOGY_TAGGER=false
