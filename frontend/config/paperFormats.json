                ],
                "total_marks": 16
              },
              {
                "choice_pairs": [
                  {
                    "questions": [3, 4],
                    "pattern": [
                      { "sub_part": "a", "marks": 10 },
                      { "sub_part": "b", "marks": 6 }
                    ],
                    "total_marks": 16
                  },
                  {
                    "questions": [5, 6],
                    "pattern": [
                      { "sub_part": "a", "marks": 10 },
                      { "sub_part": "b", "marks": 6 }
                    ],
                    "total_marks": 16
                  },
                  {
                    "questions": [7, 8],
                    "pattern": [
                      { "sub_part": "a", "marks": 8 },
                      { "sub_part": "b", "marks": 8 }
