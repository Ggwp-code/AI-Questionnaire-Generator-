                  },
                  {
                    "questions": [9, 10],
                    "pattern": [
                      { "sub_part": "a", "marks": 8 },
                      { "sub_part": "b", "marks": 8 }
                    ],
                    "total_marks": 16
                  }
                ]
              }
            ],
            "question_types": [
              "Algorithm explanation and comparison",
              "Graph traversal and path finding",
              "Numerical problem solving",
              "Data-based analysis",
              "Critical evaluation",
              "Comparative analysis"
            ],
            "bloom_levels": ["L3", "L4", "L5", "L6"],
            "course_outcomes": ["CO2", "CO3", "CO4", "CO5"]
          }
        }
      ],
      "mapping_schemes": {
        "blooms_taxonomy": {
          "L1": "Remember",
